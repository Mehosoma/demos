    background-image: url(../../images/promo/changes/advices__one_bg.jpg);
}

.advices li.two {
    background-image: url(../../images/promo/changes/advices__two_bg.jpg);
}

.advices li.three {
    !*height: 183px;*!
    background-image: url(../../images/promo/changes/advices__three_bg.jpg);
}*/

.fifth-block-container {
    padding: 30px 0;
    background-color: #213c57;
}

.fifth-block {
    margin: 0 auto;
    width: 700px;
    color: #fff;
}

.fifth-block a {
    color: #fff;
    text-decoration: underline;
}

.sixth-block-container {
    padding: 30px 0;
    background-color: #fff;
}

.sixth-block {
    margin: 0 auto;
    width: 1024px;
}

@media (max-width: 400px) {
    .two, .one {
        margin-bottom: 20px;
        padding: 0 !important;
    }
}

@media (max-width: 767px) {
    .hidden-xs, tr.hidden-xs, th.hidden-xs, td.hidden-xs {
        display: none !important
    }
}

@media (min-width: 768px) and (max-width: 991px) {
    .hidden-sm, tr.hidden-sm, th.hidden-sm, td.hidden-sm {
        display: none !important
    }
}

@media (min-width: 992px) and (max-width: 1199px) {
    .hidden-md, tr.hidden-md, th.hidden-md, td.hidden-md {
        display: none !important
    }
}

@media (min-width: 1200px) {
    .hidden-lg, tr.hidden-lg, th.hidden-lg, td.hidden-lg {
        display: none !important
    }
}

@media (max-width: 1000px) {
    .first-block-container {
        background: none;
    }
}